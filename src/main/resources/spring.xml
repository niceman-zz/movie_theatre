<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <import resource="discounts.xml"/>

    <bean id="auditoriumProperties" class="org.springframework.beans.factory.config.PropertiesFactoryBean">
        <property name="locations">
            <list>
                <value>classpath:auditoriums.properties</value>
                <value>classpath:additional-auditoriums.properties</value>
            </list>
        </property>
        <property name="fileEncoding" value="UTF-8"/>
    </bean>

    <bean id="auditoriumService" class="com.epam.spring.services.AuditoriumServiceImpl" init-method="init">
        <constructor-arg ref="auditoriumProperties"/>
    </bean>

    <bean id="userService" class="com.epam.spring.services.UserServiceImpl"/>

    <bean id="eventService" class="com.epam.spring.services.EventServiceImpl"/>
</beans>